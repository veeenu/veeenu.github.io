@import './normalize'
@import './skeleton'
@import './syntax'

color-primary-0 = #383B3C;	/* Main Primary color */
color-primary-1 = #444C52;
color-primary-2 = #2F3134;
color-primary-3 = #26282A;
color-primary-4 = #1B1D1F;

color-blue-0 = #3E78A5; /* Main Primary color */
color-blue-1 = #92BBDB;
color-blue-2 = #6197C0;
color-blue-3 = #266698;
color-blue-4 = #124E7B;

color-white = #aeaeae;

body
  font-family: "Manrope", Helvetica, sans-serif
  font-weight: 300
  background: color-primary-3;
  color: color-white;
  @media (min-width: 550px) 
    padding-bottom: 8rem
  padding-bottom: 4rem

  & > div > header
    @media (min-width: 550px) 
      margin-top: 6rem
      margin-bottom: 4rem

    margin-top: 2rem
    margin-bottom: 2rem
    img
      height: 8rem
      vertical-align: middle
      margin-right: 2rem
    h1
      font-size: 2.5rem

code, .highlight pre
  background: #2f3134
  border-width: 0
  font-family: "Fira Mono", monospace

article.blog-post
  p
    text-align: justify
  img
    display: block
    margin: auto
    max-width: 66%

