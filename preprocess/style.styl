ul.navbar
  list-style: none
  display: flex
  flex-wrap: wrap
  & > li
    //&:not(:first-child)
    //  border-left: 1px solid color-blue-2;
    display: block
    flex-grow: 1
    @media (min-width: 550px) 
      padding: 1rem
    padding: 0 1rem
    border-bottom: 2px solid transparent

    &:hover
      border-bottom-color: color-blue-2

    & > a 
      display: block
      position: relative
      text-align: center
      text-decoration: none
      color: color-blue-2;

figure.highlight
  pre
    border-radius: 3px
    margin: 0
    code
      background: transparent
      border-width: 0
  table
    margin-bottom: .5rem
    margin-top: .5rem
    td
      padding-top: 0
      padding-bottom: 0
      border-bottom: 0